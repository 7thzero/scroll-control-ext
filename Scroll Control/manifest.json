{
  "manifest_version": 2,
  "name": "Scroll Control",
  "version": "1.0",
  "description": "Limit scrolling on specified websites to prevent time wasting",

  "permissions": [
    "storage",
    "activeTab"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Scroll Control"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "scroll-control@rubion.com",
      "strict_min_version": "58.0"
    }
  }
}
